<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_note_card_pink"
    android:padding="16dp">

    <TextView
        android:id="@+id/note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FA - 1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/note_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XII - Rose\nAccounts\n12/04/2022\nMaximum Marks"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        >

        <Button
            style="@style/NoteActionButton"
            android:drawableStart="@drawable/ic_edit"
            android:text="Edit Notes"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            style="@style/NoteActionButton"
            android:drawableStart="@drawable/ic_publish"
            android:text="Publish"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            style="@style/NoteActionButton"
            android:drawableStart="@drawable/ic_delete"
            android:text="Delete"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>
</LinearLayout>
